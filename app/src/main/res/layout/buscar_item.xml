<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#393837">


    <TextView
        android:id="@+id/TxtDescCarimboCuadro"
        android:layout_width="258dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="30dp"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_circle_white"
        android:ems="10"
        android:hint="SELECCIONAR"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/TxtDescRazaCuadro"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TxtDescColorCuadro"
        android:layout_width="261dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="4dp"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_circle_white"

        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="SELECCIONAR"

        android:textAlignment="textStart"

        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="20sp"


        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/txt_caravana"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TxtDescRazaCuadro"
        android:layout_width="272dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"

        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_circle_white"
        android:ems="10"
        android:hint="SELECCIONAR"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/TxtDescColorCuadro"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TxtDescCategoriaCuadro"
        android:layout_width="246dp"
        android:layout_height="42dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="SELECCIONAR"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_circle_white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:layout_constraintStart_toEndOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/TxtDescCarimboCuadro"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TxtCodCategoriaCuadro"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="COD"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/TxtDescCarimboCuadro"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TxtCodColorCuadro"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="COD"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TxtCodRazaCuadro"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="COD"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/TxtCodColorCuadro"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio_grupo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:text="COMPRADA"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/txt_caravana"
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_below="@+id/id_animal"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/textView7"
        android:background="@color/white"
        android:textColor="#000000"
        android:textSize="18sp"
        android:hint=""
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/id_animal" />

    <TextView
        android:id="@+id/txt_posicion"
        android:layout_width="74dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="127dp"
        android:layout_marginBottom="254dp"
        android:text="TextView"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="SEXO:"
        android:textAllCaps="true"
        android:textColor="#F1F1F1"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/id_animal"
        android:layout_width="366dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:hint="IDE ELECTRONICO"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_grabar"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_animal"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"

        android:layout_marginTop="32dp"
        android:text="CARAVANA:"
        android:textAllCaps="true"
        android:textColor="#F1F1F1"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_animal"
        tools:ignore="MissingConstraints" />

    <RadioGroup
        android:id="@+id/radio_grupo"
        android:layout_width="252dp"
        android:layout_height="33dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <!-- In RadioGroup create the 1 Radio Button-->
        <!-- like this we will add some more Radio Button-->

        <RadioButton
            android:id="@+id/radio_macho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/radio_grupo"
            android:text="MACHO"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radio_hembra"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/radio_grupo"
            android:layout_alignBottom="@+id/radio_grupo"
            android:text="HEMBRA"
            android:textColor="#000000"

            android:textSize="18sp"
            android:textStyle="bold" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radio_grupo_compra"
        android:layout_width="248dp"
        android:layout_height="28dp"
        android:layout_below="@+id/textView15"

        android:layout_marginTop="28dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView16">

        <!-- In RadioGroup create the 1 Radio Button-->
        <!-- like this we will add some more Radio Button-->

        <RadioButton
            android:id="@+id/radio_compra_si"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/radio_grupo"
            android:layout_marginStart="16dp"
            android:orientation="horizontal"
            android:text="SI"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioButton
            android:id="@+id/radio_compra_no"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/radio_grupo"
            android:layout_alignBottom="@+id/radio_grupo"
            android:text="NO"
            android:textColor="#000000"

            android:textSize="18sp"
            android:textStyle="bold" />

    </RadioGroup>

    <TextView
        android:id="@+id/txt_compra"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="133dp"
        android:text="TextView"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="78dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="32dp"
        android:text="PELAJE:"
        android:textAllCaps="true"
        android:textColor="#F1F1F1"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="73dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="RAZA:"

        android:textAllCaps="true"
        android:textColor="#F1F1F1"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="CARIMBO:"

        android:textColor="#F1F1F1"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginTop="32dp"
        android:text="CATEGORIA:"
        android:textAllCaps="true"
        android:textColor="#F1F1F1"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="12dp" />

    <RelativeLayout
        android:layout_width="397dp"
        android:layout_height="239dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/radio_grupo_compra"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp">


    </RelativeLayout>

    <Button
        android:id="@+id/boton_grabar"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:drawableLeft="@drawable/ic_action_guardar"
        android:text="GUARDAR Y CERRAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="4dp" />

</android.support.constraint.ConstraintLayout>