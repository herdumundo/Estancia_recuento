<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".informe_recuento">

    <TextView
        android:id="@+id/txt_fecha"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="INGRESAR FECHA"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ListView
        android:id="@+id/listViewDet"
        android:layout_width="match_parent"
        android:layout_height="545dp"
        android:layout_below="@+id/textView25"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="3dp" />

    <Button
        android:id="@+id/btn_buscar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/txt_fecha"


        android:layout_marginTop="19dp"
        android:drawableLeft="@drawable/ic_action_search"
        android:text="BUSCAR" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_buscar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="17dp"
        android:text="TOTAL ANIMALES:"
        android:textColor="@color/design_default_color_primary"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="7sp"
        app:autoSizeStepGranularity="2sp" />

    <TextView
        android:id="@+id/txt_total"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_buscar"
        android:layout_marginStart="4dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/textView25"
        android:text="0"
        android:textColor="@color/design_default_color_primary"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="7sp"
        app:autoSizeStepGranularity="2sp" />

</RelativeLayout>